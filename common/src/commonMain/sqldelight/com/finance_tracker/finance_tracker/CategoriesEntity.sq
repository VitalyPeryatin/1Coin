CREATE TABLE CategoriesEntity (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    icon TEXT NOT NULL,
    position INTEGER
);

getAllCategories:
SELECT *
FROM CategoriesEntity
ORDER BY position;

insertCategory:
INSERT OR REPLACE
INTO CategoriesEntity
VALUES (?,?,?,?);

deleteCategoryById:
DELETE
FROM CategoriesEntity
WHERE id = :id;

replaceCategory:
UPDATE CategoriesEntity SET position = :position
WHERE id = :id;